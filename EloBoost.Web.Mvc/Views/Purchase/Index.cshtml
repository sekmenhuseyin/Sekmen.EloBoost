@using EloBoost.Web.Startup
@model EloBoost.Users.Dto.UserDto
@{
    ViewBag.CurrentPageName = PageNames.Purchase; // The menu item will be active for this page.
}
<div class="row">
    <div class="col-4">Current Credit</div>
    <div class="col-8">@Model.Credit</div>
</div>
<div class="row">
    <div class="col-4">Credit Amount</div>
    <div class="col-8">
        <select name="Amount">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="30">30</option>
            <option value="40">40</option>
            <option value="50">50</option>
            <option value="60">60</option>
            <option value="70">70</option>
            <option value="80">80</option>
            <option value="90">90</option>
            <option value="100">100</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-4">
        <input type="submit" value="Buy" class="btn btn-primary green" />
    </div>
</div>